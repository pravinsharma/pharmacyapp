doctype html
html
  include includes/head.pug
  body
    include includes/header.pug

    .main.fluid-container
        h1 Modify Medicine
        p Please add details to update the records

        .row.form-group
            .col-xl-12
                table.table.table-striped.table-dark(style="margin-bottom: 0;")
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Name
                            th(scope='col') Manufacturer
                            th(scope='col') Batch#
                            th(scope='col') Expires
                            th(scope='col') Price
                            th(scope='col') Type
                            th(scope='col') Action
                    tbody
                        for item, i in jsonObj
                            -
                                var id = JSON.stringify( item.id ).replace(/\"/g, "")
                                var name = JSON.stringify( item.name ).replace(/\"/g, "")
                                var manufacturer = JSON.stringify( item.manufacturer ).replace(/\"/g, "")
                                var batchno = JSON.stringify( item.batchno ).replace(/\"/g, "")
                                var expiry = JSON.stringify( item.expiry ).replace(/\"/g, "")
                                var price = JSON.stringify( item.price ).replace(/\"/g, "")
                                var type = JSON.stringify( item.type ).replace(/\"/g, "")
                            form(action='/action_edit', method='post')
                                tr
                                    th(scope='row')
                                        input( type='hidden' name=('medicineid_' + i) id=('medicineid_' + i)  value=id)
                                        | #{id}
                                    td
                                        input.form-control( type='text' name=('name_' + i) id=('name_' + i) value=name)
                                    td
                                        input.form-control( type='text' name=('manufacturer_' + i) id=('manufacturer_' + i) value=manufacturer)
                                    td
                                        input.form-control( type='number' name=('batchno_' + i) id=('batchno_' + i) value=batchno)
                                    td
                                        input.form-control( type='date' name=('expiry_' + i) id=('expiry_' + i) value=expiry)
                                    td
                                        input.form-control( type='text' name=('price_' + i) id=('price_' + i) value=price)
                                    td
                                        select.select.form-control.input-lg(name=('type_' + i) id=('type_' + i))
                                            option(value='0') -- Select --
                                            option(value='1') Capsule
                                            option(value='2') Tablet
                                            option(value='3') Syrup
                                            option(value='4') Gel
                                        
                                        script.
                                            $('#type_' + #{i}).val( #{type} );
                                    td
                                        input.btn.btn-primary(type='submit', value='Submit')


    include includes/footer.pug