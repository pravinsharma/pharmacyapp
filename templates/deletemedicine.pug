doctype html
html
  include includes/head.pug
  body
    include includes/header.pug
    include includes/mixin/medicinetype.pug

    .main.fluid-container
        h1 Delete Medicines
        p Please select the records to delete

        .row.form-group
            .col-xl-12
                form(action='/action_delete', method='post')
                    table.table.table-striped.table-dark(style="margin-bottom: 0;")
                        thead
                            tr
                                th(scope='col') *
                                th(scope='col') Name
                                th(scope='col') Manufacturer
                                th(scope='col') Batch#
                                th(scope='col') Expires
                                th(scope='col') Price
                                th(scope='col') Type
                        tbody
                            for item in jsonObj
                                -
                                    var id = JSON.stringify( item.id ).replace(/\"/g, "")
                                    var name = JSON.stringify( item.name ).replace(/\"/g, "")
                                    var manufacturer = JSON.stringify( item.manufacturer ).replace(/\"/g, "")
                                    var batchno = JSON.stringify( item.batchno ).replace(/\"/g, "")
                                    var expiry = JSON.stringify( item.expiry ).replace(/\"/g, "")
                                    var price = JSON.stringify( item.price ).replace(/\"/g, "")
                                    var type = JSON.stringify( item.type ).replace(/\"/g, "")
                                tr
                                    th(scope='row')
                                        input( type='checkbox' name='medicineid' id='medicineid' value=id)
                                    td #{name}
                                    td #{manufacturer}
                                    td #{batchno}
                                    td #{expiry}
                                    td #{price}
                                    td
                                        +medicinetype( type )
                    input.btn.btn-primary(type='submit', value='Submit', style='margin: 10px; float: right;')

    include includes/footer.pug