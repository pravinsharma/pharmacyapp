doctype html
html
  include includes/head.pug
  body
    include includes/header.pug
    
    .main.fluid-container
        h1 View Medicine
        
        .row.form-group
            .col-xl-12
                table.table.table-striped.table-dark
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Name
                            th(scope='col') Manufacturer
                            th(scope='col') Batch#
                            th(scope='col') Expires
                            th(scope='col') Price
                            th(scope='col') Type
                            th(scope='col') Action
                    tbody
                        for item in jsonObj
                            -   var id = JSON.stringify( item.id ).replace(/\"/g, "")
                            tr
                                th(scope='row') #{id}
                                td !{JSON.stringify( item.name ).replace(/\"/g, "")}
                                td !{JSON.stringify( item.manufacturer ).replace(/\"/g, "")}
                                td !{JSON.stringify( item.batchno ).replace(/\"/g, "")}
                                td !{JSON.stringify( item.expiry ).replace(/\"/g, "")}
                                td !{JSON.stringify( item.price ).replace(/\"/g, "")}
                                td !{JSON.stringify( item.type ).replace(/\"/g, "")}
                                td.form-group
                                    form(action='/deletemedicine', method='post', style='float: left;')
                                        input( type='hidden' name='medicineid' id='medicineid' value=id)
                                        input.btn.btn-primary(type='submit', value='Delete', style='margin: 0 10px;')
                                    form(action='/editmedicine', method='post')
                                        input( type='hidden' name='medicineid' id='medicineid'  value=id)
                                        input.btn.btn-primary(type='submit', value='Edit')


    include includes/footer.pug